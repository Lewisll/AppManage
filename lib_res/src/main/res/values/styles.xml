<resources>

    <style name="App.Theme.Main" parent="Base.App.Theme.NoTitle" />

    <!-- Base application theme. -->
    <style name="Base.App.Theme.NoTitle" parent="App.Theme.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="laugthar" parent="Base.App.Theme.NoTitle">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--作用于搜索界面-->
    <style name="App.Theme.Search" parent="App.Theme.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 日间模式 -->
    <style name="App.Theme.Light" parent="Base.App.Theme.Light" />


    <!--base theme light-->
    <style name="Base.App.Theme.Light" parent="@style/Theme.AppCompat.Light">
        <!--color primary-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!--toolbar style-->
        <item name="actionBarSize">48dp</item>
        <!--window style-->
        <item name="elevation">0dp</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 横向线条 -->
    <style name="h_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/list_divider_color</item>
    </style>

    <style name="tabTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45.0dip</item>
    </style>

    <style name="detailTabStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingLeft">20dip</item>
    </style>

    <style name="detailTabContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dip</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="detailTabContentStyle4">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="detailTabContentStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dip</item>
        <item name="android:textColor">@color/detail_textColor2</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="detailTabContentStyle3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:textColor">@color/detail_textColor</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="subscribe_my_tip_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/subscribe_tip_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="subscribe_seperate_line">
        <item name="android:background">@color/subscribe_seperate_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:layout_marginTop">14.0dip</item>
        <item name="android:layout_marginBottom">14.0dip</item>
    </style>

    <style name="subscribe_more_tip_text" parent="@style/subscribe_my_tip_text">
        <item name="android:textSize">13.0sp</item>
    </style>

    <style name="title_bar_style">
        <item name="android:background">@drawable/bg_titlebar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">55dp</item>
    </style>


    <style name="title_text_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

</resources>
